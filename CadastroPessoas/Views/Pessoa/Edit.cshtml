@model CadastroPessoas.Models.Pessoa

<h2>Editar Pessoa</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <h4>Endereços</h4>
    <div id="addresses">
        @for (int i = 0; i < Model.Enderecos.Count; i++)
        {
            <div class="address-item">
                <div class="form-group">
                    <label>Rua</label>
                    <input name="Enderecos[@i].Id" class="form-control" value="@Model.Enderecos[i].Id" hidden/>
                    <input name="Enderecos[@i].Rua" class="form-control" value="@Model.Enderecos[i].Rua" />
                </div>
                <div class="form-group">
                    <label>Cidade</label>
                    <input name="Enderecos[@i].Cidade" class="form-control" value="@Model.Enderecos[i].Cidade" />
                </div>
                <div class="form-group">
                    <label>Estado</label>
                    <input name="Enderecos[@i].Uf" class="form-control" value="@Model.Enderecos[i].Uf" />
                </div>
            </div>
        }
    </div>

    <button type="button" onclick="addAddress()">Adicionar Endereço</button>

    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <script>
        var addressIndex = @Model.Enderecos.Count;

        function addAddress() {
            var addressHtml = `
                    <div class="address-item">
                        <div class="form-group">
                            <label>Rua</label>
                            <input name="Enderecos[${addressIndex}].Rua" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Cidade</label>
                            <input name="Enderecos[${addressIndex}].Cidade" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Estado</label>
                            <input name="Enderecos[${addressIndex}].Uf" class="form-control" />
                        </div>
                    </div>`;
            document.getElementById('addresses').insertAdjacentHTML('beforeend', addressHtml);
            addressIndex++;
        }
    </script>
}
