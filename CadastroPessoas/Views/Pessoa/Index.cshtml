@model IEnumerable<CadastroPessoas.Models.Pessoa>

<h2>Lista de Pessoas</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.Nome</td>
                <td>@person.Email</td>
                <td>
                    <a href="/Pessoa/Edit/@person.Id">Editar</a> |
                    <a href="/Pessoa/Delete/@person.Id">Excluir</a> |
                    <a href="/Pessoa/Details/@person.Id">Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Pessoa/Create">Adicionar Pessoa</a>
